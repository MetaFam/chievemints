{
  "compilerOptions": {
    "target": "es2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "types": ["node"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    // "module": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "outDir": "dist",
  },
  "references": [{ "path": "../ui" }],
  "include": ["scripts", "test/**/*", "**/*.d.ts"],
  "files": ["hardhat.config.ts"],
  "exclude": [],
  "ts-node": {
    "compilerOptions": {
       // "module": "esnext",
    },
  },
}
